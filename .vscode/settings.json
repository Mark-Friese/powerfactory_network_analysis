{
    // Python Configuration for PowerFactory
    "python.defaultInterpreterPath": "C:\\Python311\\python.exe",
    "python.terminal.activateEnvironment": true,
    
    // PowerFactory specific Python paths
    "python.envFile": "${workspaceFolder}/.env",
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/src/core",
        "${workspaceFolder}/src/analyzers", 
        "${workspaceFolder}/src/models",
        "${workspaceFolder}/src/reports",
        "${workspaceFolder}/src/utils",
        "C:\\Program Files\\DIgSILENT\\PowerFactory 2021 SP3\\Python\\3.9",
        "C:\\Program Files\\DIgSILENT\\PowerFactory 2022\\Python\\3.9",
        "C:\\Program Files\\DIgSILENT\\PowerFactory 2023\\Python\\3.9"
    ],
    
    // Reduce warning noise (keep errors visible)
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "warning",
        "reportMissingTypeStubs": "information",
        "reportUnknownMemberType": "information",
        "reportGeneralTypeIssues": "information",
        "reportUnusedImport": "information",
        "reportUnusedVariable": "information"
    },
    
    // Modern formatting (requires ms-python.black-formatter extension)
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    
    // Black formatter settings
    "black-formatter.args": ["--line-length", "88"],
    
    // Editor preferences
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    
    // PowerFactory file associations
    "files.associations": {
        "*.pfd": "text",
        "*.env": "properties",
        ".env.*": "properties"
    },
    
    // Performance: exclude unnecessary file watching
    "files.watcherExclude": {
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/output/**": true,
        "**/logs/**": true,
        "**/__pycache__/**": true,
        "**/*.pyc": true
    },
    
    // PowerFactory project structure
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/output/logs/*.log": false,
        "**/output/reports/*.xlsx": false,
        "**/output/reports/*.csv": false
    },
    
    // Testing
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false
}